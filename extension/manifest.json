{
  "name": "English Dictionaries - Tool for English teachers",
  "short_name": "English Dictionaries",
  "description": "English Dictionary tool for English teachers",
  "version": "0.1.1",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "https://dictionary.cambridge.org/**",
    "https://www.oxfordlearnersdictionaries.com/**"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://dictionary.cambridge.org/**"
      ],
      "js": [
        "build/cambridge.js"
      ]
    },
    {
      "matches": [
        "https://www.oxfordlearnersdictionaries.com/**"
      ],
      "js": [
        "build/oxford.js"
      ]
    }
  ],
  "options_page": "options.html",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/ed-32x32.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icons/ed-16x16.png",
    "32": "icons/ed-32x32.png",
    "48": "icons/ed-48x48.png",
    "128": "icons/ed-128x128.png"
  },
  "web_accessible_resources": [
    "popup.html",
    "audio/*.mp3"
  ]
}
