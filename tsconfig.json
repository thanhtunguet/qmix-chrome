{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "outDir": "dist",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "package.json": [
        "./package.json"
      ],
      "manifest.json": [
        "./extension/manifest.json"
      ]
    },
    "resolveJsonModule": true,
    "target": "ES5"
  },
  "exclude": [
    ".git",
    ".idea",
    "dist",
    "node_modules",
    "README.md"
  ]
}
