{
  "manifest_version": 2,
  "version": "1.0.4",
  "name": "Phần mềm soạn giảng QMix",
  "short_name": "Phần mềm soạn giảng QMix",
  "description": "Phần mềm soạn giảng QMix, hỗ trợ soạn bài trên trình duyệt Chrome cho giáo viên Tiếng Anh",
  "homepage_url": "https://qmix.com.vn",
  "permissions": [
    "https://dictionary.cambridge.org/**",
    "https://www.oxfordlearnersdictionaries.com/**",
    "identity",
    "identity.email",
    "notifications",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://dictionary.cambridge.org/**"
      ],
      "js": [
        "libs/jquery/dist/jquery.min.js",
        "libs/popper.js/dist/umd/popper.min.js",
        "libs/bootstrap/dist/js/bootstrap.js",
        "build/cambridge.js"
      ],
      "css": []
    },
    {
      "matches": [
        "https://www.oxfordlearnersdictionaries.com/**"
      ],
      "js": [
        "libs/jquery/dist/jquery.min.js",
        "libs/popper.js/dist/umd/popper.min.js",
        "libs/bootstrap/dist/js/bootstrap.js",
        "build/oxford.js"
      ],
      "css": []
    }
  ],
  "background": {
    "scripts": [
      "build/background.js"
    ]
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/ed-16x16.png",
    "32": "icons/ed-32x32.png",
    "48": "icons/ed-48x48.png",
    "128": "icons/ed-128x128.png"
  },
  "web_accessible_resources": [
    "audio/*.mp3",
    "background.html",
    "build/*.js",
    "build/*.js.map",
    "icons/*.png",
    "images/*.png",
    "js/**/*",
    "libs/**/*",
    "options.html"
  ],
  "content_security_policy": "script-src 'self' https://essential-teaching-system.firebaseio.com; object-src 'self'"
}